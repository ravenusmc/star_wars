<h1>People</h1>

<%= form_tag people_path do %>
  <div class="form-group">
    <p><%= text_field_tag :number, nil, placeholder: "Integer", class: "form-control" %></p>
    <%= submit_tag "Get Information", class: "btn btn-primary" %>
<% end %>

<p>name: <%= @name %></p>
<p>Height: <%= @height %></p>
<p>Mass: <%= @mass %></p>
<p>Hair Color: <%= @hair_color %></p>
<p>Skin Color: <%= @skin_color %></p>
<p>Eye Color: <%= @eye_color %></p>
<p>Birth Year: <%= @birth_year %></p>
<p>Gender: <%= @gender %></p>
